<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="VoCuong_20002345_WWW_Week2" transaction-type="RESOURCE_LOCAL">
      <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <!-- Cấu hình đối tượng quản lý thực thể (Entity Manager) -->
    <properties>
      <!-- Cấu hình thông tin kết nối cơ sở dữ liệu MariaDB -->
        <property name="jakarta.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver"></property>
        <property name="jakarta.persistence.jdbc.url" value="jdbc:mariadb://localhost:3306/mydb?createDatabaseIfNotExist = true"/>
        <property name="jakarta.persistence.jdbc.user" value="root"/>
        <property name="jakarta.persistence.jdbc.password" value="sapassword"/>
        <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>
      </properties>

    </persistence-unit>
  </persistence>
</persistence>
